<h1>99 Bottles of Beer On the Wall</h1>

beer_bottles = 99
while beer_bottles >= 0
  if beer_bottles > 2
        puts beer_bottles.to_s + " bottles of beer on the wall, " + beer_bottles.to_s + " bottles of beer."
      puts "Take one down and pass it around, " + (beer_bottles - 1).to_s + " bottles of beer on the wall."
  elsif beer_bottles == 2
  puts beer_bottles.to_s + " bottles of beer on the wall, " + beer_bottles.to_s + " bottles of beer.\nTake one down and pass it around, " + (beer_bottles - 1).to_s + " bottle of beer on the wall."
  elsif beer_bottles == 1
  puts beer_bottles.to_s + " bottle of beer on the wall, " + beer_bottles.to_s + " bottle of beer.\nTake one down and pass it around, no more bottles of beer on the wall."
  elsif beer_bottles == 0
  puts "No more bottles of beer on the wall, no more bottles of beer.\nGo to the store and buy some more, 99 bottles of beer on the wall."
  end
 
    beer_bottles -= 1
end

